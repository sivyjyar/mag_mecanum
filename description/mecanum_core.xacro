<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>
    <xacro:include filename="mecanum_wheel_macro.xacro"/>

    <!-- MATERIALS -->

    <material name="yellow">
        <color rgba="1 1 0 1"/>
    </material>

     <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
    </material>

    <!-- CONSTANS -->
    <xacro:property name="PI" value="3.1415926535897931" />

    <xacro:property name="wheel_radius" value="0.050" />
    <xacro:property name="wheel_width" value="0.0505" />


    <!-- BASE LINK -->

    <link name="base_link">
    </link>

    <!-- CHASSIS -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0 0 0.1"/>
            <geometry>
                <box size="0.4 0.24 0.1"/>
            </geometry>
            <material name="yellow"/>
        </visual>

        <collision>
            <origin xyz="0 0 0.1"/>
            <geometry>
                <box size="0.4 0.24 0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.4" y="0.24" z="0.1">
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/Yellow</material>
    </gazebo>



        <!--    1) LEFT FRONT WHEEL-->

 <xacro:mecanum_wheel name="left_front" side="-1" interface="hardware_interface/EffortJointInterface" />

  <joint name="left_front_wheel_joint" type="continuous">
    <parent link="chassis" />
    <child link="left_front_wheel_link" />
    <origin rpy="0 0 1.5708"  xyz="0.125 0.15 0.1"/>
  </joint>

    <!--    2) LEFT REAR WHEEL-->

 <xacro:mecanum_wheel name="left_rear" side="1" interface="hardware_interface/EffortJointInterface" />

  <joint name="left_rear_wheel_joint" type="continuous">
    <parent link="chassis" />
    <child link="left_rear_wheel_link" />
    <origin rpy="0 0 1.5708"  xyz="-0.125 0.15 0.1"/>
  </joint>

            <!--    3) RIGHT FRONT WHEEL-->

 <xacro:mecanum_wheel name="right_front" side="1" interface="hardware_interface/EffortJointInterface" />

  <joint name="right_front_wheel_joint" type="continuous">
    <parent link="chassis" />
    <child link="right_front_wheel_link" />
    <origin rpy="0 0 1.5708"  xyz="0.125 -0.15 0.1"/>
  </joint>


    <!--    4) RIGHT REAR WHEEL-->

 <xacro:mecanum_wheel name="right_rear" side="-1" interface="hardware_interface/EffortJointInterface" />

  <joint name="right_rear_wheel_joint" type="continuous">
    <parent link="chassis" />
    <child link="right_rear_wheel_link" />
    <origin rpy="0 0 1.5708"  xyz="-0.125 -0.15 0.1"/>
  </joint>





<!--    SHIT-->

    <joint name="PERED_joint" type="fixed">
        <parent link="chassis" />
    <child link="PERED" />
        <origin xyz="0.125 0 0.15"/>


    </joint>

       <link name="PERED">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size="0.1 0.1 0.05"/>
            </geometry>
            <material name="yellow"/>
        </visual>

        <collision>
            <origin xyz="0 0 0.2"/>
            <geometry>
                <box size="0.4 0.24 0.1"/>
            </geometry>
        </collision>
    </link>

    <gazebo reference="PERED">
        <material>Gazebo/Yellow</material>
    </gazebo>





 </robot>